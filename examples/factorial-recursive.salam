تابع فاکتوریل(عدد) {
    اگر عدد == ۰ {
        برگشت ۱
    }
    برگشت عدد * فاکتوریل(عدد - ۱)
}

تابع تست() {
    عدد = ۱۰

    نمایش عدد

    نتیجه = فاکتوریل(عدد)

    نمایش عدد

    نمایش نتیجه

    نمایش عدد
    نمایش عدد + "!"
    نمایش "!" + عدد

    نمایش "فاکتوریل از " + عدد + " برابر با " + نتیجه
}

تابع سیلک {
    عدد = ۵
    نمایش فاکتوریل(عدد)

    تست()
}
